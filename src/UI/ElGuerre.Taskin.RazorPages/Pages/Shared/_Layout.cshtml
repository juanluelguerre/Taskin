    <div class="mdl-grid mdl-layout__header">
        <span class="mdl-layout-title">@ViewData["Title"]</span>
    </div>

    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">

        <div class="mdl-layout__drawer">
            <nav class="mdl-navigation">
                <a asp-page="/Index" class="mdl-navigation__link">Home</a>
                <a asp-page="/About" class="mdl-navigation__link">About</a>
                <a asp-page="/Projects" class="mdl-navigation__link">Projects</a>
            </nav>
        </div>

        <main class="mdl-layout__content">
            <div class="mdl-grid page-content">
                @RenderBody()
            </div>
        </main>

        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer--left-section">
                <p>&copy; 2018 - Taskin - elGuerre.com</p>
            </div>
        </footer>
    </div>

    <partial name="_CookieConsentPartial" />

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        @*<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>*@
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
