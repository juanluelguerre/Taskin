{
  "UseTest": true,

  "ConnectionStrings": {
    "Taskin": "Server=(localdb)\\mssqllocaldb;Database=DataContext-466fff8d-21da-45f8-9323-1fa9a619831b;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "outputTemplate": "===> {Timestamp:HH:mm:ss.fff} [{Level}] {Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "trace-{Date}.log",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Application}] [{Level}] {Message}{NewLine}{Exception}",
                "fileSizeLimitBytes": 500000,
                "retainedFileCountLimit": 7 /* One file per day on a week */
              }
            }
          ]
        }
      }
    ],
    "Properties": {
      "Application": "Taskin",
      "Environment": "Development"
    }
  }
}
