{
    "UseTest": true,

    "ConnectionStrings": {
        "Taskin": "Server=(localdb)\\mssqllocaldb;Database=DataContext-466fff8d-21da-45f8-9323-1fa9a619831b;Trusted_Connection=True;MultipleActiveResultSets=true"
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.RollingFile" ],
        "MinimumLevel": "Verbose",
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "RollingFile",
                            "Args": {
                                "pathFormat": "trace-{Date}.log",
                                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Application}] [{Level}] {Message}{NewLine}{Exception}",
                                "fileSizeLimitBytes": 5000000,                                
                                "retainedFileCountLimit": 10
                            }
                        }
                    ]
                }
            },
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "===> {Timestamp:HH:mm:ss.fff} [{Level}] {Message}{NewLine}{Exception}"
                }
            }
        ],
        "Properties": {
            "Application": "Taskin",
            "Environment": "Development"
        }
    }

}